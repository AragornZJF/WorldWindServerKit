<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

    <!-- WebWorldWind Viewer -->
    
    <bean id="worldwindClasspathPublisherMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="alwaysUseFullPath" value="true"/>
        <property name="mappings">
            <props>
                <!-- 
                Use the classpathPublisher bean defined in the GeoServer Main Module 
                to locate the viewer endpoint resources
                -->
                <prop key="/explorer">classpathPublisher</prop>
                <prop key="/explorer/**">classpathPublisher</prop>
            </props>
        </property>
    </bean>
    
</beans>
