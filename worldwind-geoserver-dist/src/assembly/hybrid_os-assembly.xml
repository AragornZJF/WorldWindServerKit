<!--See: http://maven.apache.org/plugins/maven-assembly-plugin/assembly.html-->
<assembly>
    <id>hybrid_os</id>
    <formats>
        <format>zip</format>
        <format>tgz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <componentDescriptors>
        <componentDescriptor>src/assembly/geoserver.xml</componentDescriptor>
        <componentDescriptor>src/assembly/jetty.xml</componentDescriptor>
        <componentDescriptor>src/assembly/gdal-centos64.xml</componentDescriptor>
        <componentDescriptor>src/assembly/data-nasa.xml</componentDescriptor>
        <!--<componentDescriptor>src/assembly/data-ssgf.xml</componentDescriptor>-->
    </componentDescriptors>    
    <fileSets>
        <fileSet>
            <!-- the Java Server JRE distribution(s); to be unzipped on the target device -->
            <directory>src/main/resources/java</directory>
            <outputDirectory>worldwind-geoserver-${project.version}</outputDirectory>
        </fileSet>
        
        <fileSet>
            <!--unix shell geoserver scripts--> 
            <directory>src/main/resources/bin</directory>
            <lineEnding>unix</lineEnding>
            <outputDirectory>worldwind-geoserver-${project.version}/bin</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>*.sh</include>
            </includes>
        </fileSet>

        <fileSet>
            <!-- the setup and run scripts -->
            <directory>src/main/resources/ssgf</directory>
            <outputDirectory>worldwind-geoserver-${project.version}</outputDirectory>
            <lineEnding>unix</lineEnding>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
            <includes>
                <include>*.sh</include>
            </includes>       
        </fileSet>
    </fileSets>
</assembly>
